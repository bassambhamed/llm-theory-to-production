# LLM API Keys
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
COHERE_API_KEY=your-cohere-key-here
GROQ_API_KEY=your-groq-key-here

# Hugging Face
HF_TOKEN=hf_your-huggingface-token-here
HF_HOME=/path/to/cache

# Vector Databases
PINECONE_API_KEY=your-pinecone-key-here
PINECONE_ENVIRONMENT=us-west1-gcp
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-key-here
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-key-here

# Search APIs
SERPER_API_KEY=your-serper-key-here
SERPAPI_API_KEY=your-serpapi-key-here
TAVILY_API_KEY=your-tavily-key-here

# Monitoring & Analytics
WANDB_API_KEY=your-wandb-key-here
WANDB_PROJECT=llm-course
LANGSMITH_API_KEY=your-langsmith-key-here
LANGSMITH_PROJECT=llm-course

# Database (Optional)
DATABASE_URL=postgresql://user:password@localhost:5432/llm_course

# Model Settings
DEFAULT_MODEL=gpt-4
DEFAULT_TEMPERATURE=0.7
MAX_TOKENS=2000

# Cache Settings
CACHE_DIR=./cache
MODELS_DIR=./models
DATA_DIR=./data

# Environment
ENVIRONMENT=development  # development, production, testing
DEBUG=True
LOG_LEVEL=INFO

# API Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
REQUEST_TIMEOUT=30

# GPU Settings
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# Jupyter Settings
JUPYTER_PORT=8888
JUPYTER_TOKEN=your-jupyter-token-here
